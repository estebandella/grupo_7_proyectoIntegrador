<!DOCTYPE html>
<html lang="en">

<!--EL SEGUNDO PARAMETRO ES UN OBJETO, CON UNA PROPIEDAD POR CADA VARIABLE (QEU VOY A USAR DENTRO DEL EJS)-->
<%- include('./partials/head', {titulo:'Register', stylesFile:'stylelogin.css'}) %>

<body>

    <!-- Header -->
    <%- include('./partials/header') %>
    
    <main class="login-container">
        <div class="login-content">
            <div class="login-panel">
                <h2 class="h3">Formulario de Creacion de Productos en Carteras MILUZ</h2>
                <p>Carga de productos</p>
                <form action="/products" method="POST" enctype="multipart/form-data">
                    
                    <!--<div class="register-label">
                        <label for="productId">ID del producto</label>
                        <input class="register-style" type="text" id="productId" name="productId" required  placeholder="Ej. 1,2,3">
                    </div>-->
                    <div class="register-label">
                        <label for="nombre">Nombre del producto</label>
                        <input class="register-style" type="text" id="nombre" name="nombre" required maxlength="15" placeholder="Ej. Cartera">
                    </div>
                    <div class="register-label">
                        <label for="precio">Precio</label>
                        <input class="register-style" type="text" id="precio" name="precio" required placeholder="Ej. $2500">
                    </div>
                    <div class="register-label">
                        <label for="descuento">Descuento</label>
                        <input class="register-style" type="text" id="descuento" name="descuento" required placeholder="Ej. 20%">
                    </div>
                    <div class="register-label">
                        <label for="cuotas">Cuotas</label>
                        <input class="register-style" type="text" id="cuotas" name="cuotas" required placeholder="Ej. 5 cuotas de $1000">
                    </div>
                    <div class="register-label">
                        <label for="descripcion">Descripción</label>
                        <input class="register-style" type="text" id="descripcion" name="descripcion" required placeholder="Ej. cuero genuino, manija desmontable">
                    </div>
                    <div class="register-label">
                        <label for="medidas">Medidas</label>
                        <input class="register-style" type="text" id="medidas" name="medidas" required placeholder="Ej. alto 25 , ancho 45">
                    </div>
                    <div class="register-label">
                        <label for="cuidados">Cuidados</label>
                        <input class="register-style" type="text" id="cuidados" name="cuidados" required placeholder="Ej. no mojar">
                    </div>
                    <div class="register-label">
                        <label for="colores">Colores</label><br>
                        <div class="style-box">
                            <% for(var i = 0; i < colours.length; i++) {%>
                                <label><input class="register-style" name="color" type="checkbox" id="colores" value="<%= colours[i].code %>" > <%= colours[i].name %> </label><br>
                            <% } %>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="categoria" id="category" class="form-input">
							<option value="">Elegí</option>
							<option value="Carteras">Carteras</option>
							<option value="Bandoleras">Bandoleras</option>
                            <option value="Bolsos Deportivos">Bolsos Deportivos</option>
                            <option value="Mochilas">Mochilas</option>
						</select>
					</div>
                    <div class="register-label">
                        <label for="imagen">Seleccionar Imágen</label><br>
                        <input autofocus="true" class="imagen" type="file" name="imagenProducto" id = 'file' accept = '.jpg' multiple>
                    </div>
                    <div>
                        <button  class="btn btn-primary btn-lg" type="submit">CREAR</button>
                    </div>
                    
       
                </form>

                <a href="/"><button class="cancela-register" type="submit">Cancelar</button></a>
                
            </div>
        </div>
    </main>
    
    <%- include('./partials/footer') %>

</body>
</html>